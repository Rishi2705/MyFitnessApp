<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".menu_fragment">

    <TextView
        android:id="@+id/pd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paid Content"
        android:textSize="50sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <CheckBox
        android:id="@+id/cht"
        app:layout_constraintTop_toBottomOf="@id/pd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trainer"/>
    <CheckBox
        app:layout_constraintTop_toBottomOf="@id/cht"
        android:id="@+id/chdie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Dietitian"/>
    <CheckBox
        app:layout_constraintTop_toBottomOf="@id/chdie"
        android:id="@+id/chdoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Doctor"/>

    <Button
        android:id="@+id/letgo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's go!!"/>


</androidx.constraintlayout.widget.ConstraintLayout>